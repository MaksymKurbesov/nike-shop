mixin collection-list__item(numImg, name, price, sale, salePrice, grade)
  .collections-list__item.product-info
    .product-info__image
      img(src=`/assets/img/content/collection${numImg}.png`, alt="")
    .product-info__name= name
    if sale
      .product-info__price
        .price-old= `${price}`
        .price-new= `${salePrice}`
          span .00
    else  
      .product-info__price= `${price}`
        span .00   
    .product-info__grade
      include ./star-rating/star-rating
      +star-rating
    .product-info__overlay.overlay
      .overlay__details
        include /assets/img/svg/eye.svg
      .overlay__cart
        include /assets/img/svg/bag.svg


